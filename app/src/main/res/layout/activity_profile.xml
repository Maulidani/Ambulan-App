<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.driver.ProfileActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInfoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableEnd="@drawable/ic_right"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInfoPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawableEnd="@drawable/ic_right"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Telepon"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInfoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawableEnd="@drawable/ic_right"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoPhone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInfoAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:drawableEnd="@drawable/ic_right"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Alamat"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvInfoEmail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:text="Andi Salsabilah"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tvInfoName"
        app:layout_constraintRight_toRightOf="@id/tvInfoName"
        app:layout_constraintTop_toTopOf="@+id/tvInfoName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:text="085123123123"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tvInfoPhone"
        app:layout_constraintRight_toRightOf="@id/tvInfoPhone"
        app:layout_constraintTop_toTopOf="@+id/tvInfoPhone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:text="andi@gmail.com"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tvInfoEmail"
        app:layout_constraintRight_toRightOf="@id/tvInfoEmail"
        app:layout_constraintTop_toTopOf="@+id/tvInfoEmail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:gravity="end"
        android:lines="1"
        android:text="andiandi@gmail.com"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tvInfoAddress"
        app:layout_constraintRight_toRightOf="@id/tvInfoAddress"
        app:layout_constraintTop_toTopOf="@+id/tvInfoAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>